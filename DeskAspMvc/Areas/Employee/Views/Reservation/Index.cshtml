@model IEnumerable<DeskAspMvc.Models.dto.EmployeeDeskDTO>
@{
    ViewData["Title"] = "Index";

}
<a asp-action="YourReservations">your reservations</a>
<ul>

    @foreach (var item in Model)
    {
        <li>
            @item.Name
            

            @item.LocationName
            
            @if(item.isAvailable==true){
                <a asp-action="Reserve" asp-route-id="@item.id">Reserve</a>

            }
            else
            {
                <text>
                    desk is not available
                </text>    
            }

            
        </li>
    }
</ul>

