@{
    ViewData["Title"] = "Reserve";

}

@model DeskAspMvc.Models.Reservation

@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@


<div class="row">
    <div class="col-md-4">
        <form asp-action="Reserve">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @Model.desk.name
            @Model.desk.location.name
            <input asp-for="deskId" type="hidden" value="@Model.desk.id"  />
            <input asp-for="ownerId" type="hidden" value="@Model.ownerId"  />
            <input asp-for="id" type="hidden" value="0"/>
            @Html.EditorFor(model=>model.date)

            <div class="form-group">
                <input type="submit" value="Reserve" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

